@model CTS_System6.Models.Languages

@{
    ViewData["Title"] = "Create";
}


<section>
    <div class="container" data-aos="fade-up">
        <div class="section-title">
            <h2>Add Language</h2>
        </div>
        <form asp-action="Create">
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Language Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="Name">
                </div>
            </div>
            <div class="alert alert-danger bg-danger text-light border-0 alert-dismissible fade show" role="alert" asp-validation-summary="ModelOnly">
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Add</button>
                <a class="card-link" asp-action="Index">Back</a>
            </div>
            <div class="alert alert-danger bg-danger text-light border-0 alert-dismissible fade show" role="alert" asp-validation-summary="ModelOnly">
            </div>
        </form>
    </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
