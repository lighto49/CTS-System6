@model CTS_System6.Models.Projects

@{
    ViewData["Title"] = "Create";
    var CID = ViewBag.CID;
    var PS = ViewBag.PS;
}

<h1>Create</h1>

<h4>Projects</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FromLanguage" class="control-label"></label>
                <input asp-for="FromLanguage" class="form-control" />
                <span asp-validation-for="FromLanguage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToLanguage" class="control-label"></label>
                <input asp-for="ToLanguage" class="form-control" />
                <span asp-validation-for="ToLanguage" class="text-danger"></span>

            </div>



            <div class="form-group">
                <label asp-for="Currency" class="control-label"></label>
                <input asp-for="Currency" class="form-control" />
                <span asp-validation-for="Currency" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}






<section>
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Add Project</h2>
        </div>

        <div class="card">
            <div class="card-body">

                <form asp-action="Create">
                    <input type="hidden" asp-for="CustomerId" class="form-control" value="@CID" />
                    <input type="hidden" asp-for="Status" class="form-control" value="@PS" />

                    <div class="col-md-12">
                        <label asp-for="Subject" class="form-label"></label>
                        <input type="text" class="form-control" asp-for="Subject">
                    </div>
                    <div class="col-md-12">
                        <label asp-for="Body" class="form-label"></label>
                        <input type="text" class="form-control" asp-for="Body">
                    </div>
                    <div class="col-md-12">
                        <label class="form-label">Price</label>
                        <input type="text" class="form-control" asp-for="Offer">
                    </div>
                    <div class="col-md-12">
                        <label asp-for="DeliveryDate" class="form-label"></label>
                        <input type="date" class="form-control" asp-for="DeliveryDate">
                    </div>



                    <div class="col-md-6">
                        <label for="inputEmail5" class="form-label">Email</label>
                        <input type="email" class="form-control" id="inputEmail5">
                    </div>
                    <div class="col-md-6">
                        <label for="inputPassword5" class="form-label">Password</label>
                        <input type="password" class="form-control" id="inputPassword5">
                    </div>
                    <div class="col-12">
                        <label for="inputAddress5" class="form-label">Address</label>
                        <input type="text" class="form-control" id="inputAddres5s" placeholder="1234 Main St">
                    </div>
                    <div class="col-12">
                        <label for="inputAddress2" class="form-label">Address 2</label>
                        <input type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor">
                    </div>
                    <div class="col-md-6">
                        <label for="inputCity" class="form-label">City</label>
                        <input type="text" class="form-control" id="inputCity">
                    </div>
                    <div class="col-md-4">
                        <label for="inputState" class="form-label">State</label>
                        <select id="inputState" class="form-select">
                            <option selected>Choose...</option>
                            <option>...</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="inputZip" class="form-label">Zip</label>
                        <input type="text" class="form-control" id="inputZip">
                    </div>
                    <div class="col-12">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="gridCheck">
                            <label class="form-check-label" for="gridCheck">
                                Check me out
                            </label>
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <button type="reset" class="btn btn-secondary">Reset</button>
                    </div>
                </form>

            </div>
        </div>

    </div>


    </div>

</section>