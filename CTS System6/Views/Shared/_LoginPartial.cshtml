@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@*<ul class="navbar-nav">*@
@if (SignInManager.IsSignedIn(User))
{
    @if (UserManager.GetUserAsync(User).Result.ProfilePictuer != null)
    {
        <li>
            <img class="avatar rounded-circle" alt="profile" src="data:image/*;base64,@(Convert.ToBase64String(UserManager.GetUserAsync(User).Result.ProfilePictuer))" />
        </li>
    }
    <li>
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name</a>
    </li>
    <li>
        <form class="getstarted" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li>
        <a class="getstarted scrollto" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li>
        <a class="getstarted scrollto" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>

}
@*</ul>*@
