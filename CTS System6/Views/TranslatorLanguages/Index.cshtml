@model IEnumerable<CTS_System6.ViewModels.TranslatorLanguageVM>

@{
    ViewData["Title"] = "My Languages";
}


<section>
    <div class="container" data-aos="fade-up">
        <div class="section-title">
            <h2>My Languages</h2>
        </div>
        <div class="m-2">
            <a class="btn btn-primary" asp-action="Create"><i class="bx bx-add-to-queue"></i> Add Language</a>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="row align-items-top">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4">
                            <div class="card">
                                <div class="card-header">
                                    @if (item.Status)
                                    {
                                        <p>Active</p>
                                    }
                                    else
                                    {
                                        <p>Not Active</p>
                                    }
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">@item.FromName - @item.ToName</h5>
                                </div>
                                <div class="card-footer">
                                    <a asp-action="Delete" asp-controller="TranslatorLanguages" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
