@model IEnumerable<CTS_System6.ViewModels.TranslatorProjectVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Projects</h1>


<table class="table">
    <thead>
        <tr>
            <th>

            </th>

            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Currency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FromLanguageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToLanguageName)
            </th>
            <th>
                Customer Name
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td  onclick="ViewProfile('@item.CustomerId')">
                @await Component.InvokeAsync("ProfileIcon", new { UserId = item.CustomerId })
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Currency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Offer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FromLanguageName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToLanguageName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerFirstName) @Html.DisplayFor(modelItem => item.CustomerLastName)
            </td>

            <td>
                <a asp-action="Bid" asp-route-id="@item.Id">Bid</a> |
            </td>
        </tr>
}
    </tbody>
</table>
